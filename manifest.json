{
    "manifest_version": 3,
    "name": "Chroma Scripts",
    "version": "1.0",
    "description": "Just a collection of scripts that make the internet a better place",
    "permissions": ["activeTab", "scripting", "webNavigation"],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_start",
            "js": ["lazydarkmode.js"],
            "match_about_blank": true,
            "all_frames": true
        },
        {
            "matches": ["*://youtube.com/*", "*://*.youtube.com/*"],
            "run_at": "document_start",
            "js": ["nochat.js"],
            "all_frames": true
        },
        {
            "matches": ["*://youtube.com/*", "*://*.youtube.com/*"],
            "run_at": "document_end",
            "css": ["theatermode.css"]
        }
    ]
}
